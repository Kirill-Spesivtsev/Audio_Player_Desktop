<UserControl x:Class="AudioPlayer.AlbumArtwork"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="170" Height="170" HorizontalAlignment="Right" VerticalAlignment="Bottom">
    <Grid Width="170" Height="170" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Image x:Name="imageAlbumBack" Margin="15" Source="Resources/Pictures/Disk1.png" Visibility="Visible" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Height="140" Width="140" />
        <Rectangle Fill="Transparent" HorizontalAlignment="Left" Height="162" Stroke="Black" VerticalAlignment="Top" Width="162" Margin="4"/>
        <Image x:Name="imageAlbum" Margin="5,5,0,0"  Visibility="Visible" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Height="160" Width="160" />
    </Grid>

</UserControl>
